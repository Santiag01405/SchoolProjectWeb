@model List<SchoolProjectWeb.Models.GradeViewModel>

@{
    ViewData["Title"] = "Asignar Calificaciones";
    int evaluationId = ViewBag.EvaluationId;
}

<h1 class="main-title">Asignar <span class="brand-name">Calificaciones</span></h1>
<hr />

<form asp-action="AssignGrades" method="post">
    <input type="hidden" name="evaluationId" value="@evaluationId" />
    <table class="table table-hover table-striped">
        <thead class="bg-primary text-white">
            <tr>
                <th>Estudiante</th>
                <th>Calificación</th>
                <th>Comentarios</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].UserName
                        <input type="hidden" asp-for="@Model[i].UserID" />
                        <input type="hidden" asp-for="@Model[i].EvaluationID" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].GradeValue" type="number" step="0.1" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].Comments" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group mt-4 text-center">
        <button type="submit" class="btn btn-primary-custom">Guardar Calificaciones</button>
        <a asp-action="ListEvaluations" class="btn btn-secondary-custom ms-2">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}