@model SchoolProjectWeb.Models.ExtracurricularViewModel

@{
    ViewData["Title"] = "Crear Actividad Extracurricular";
}

<h2 class="main-title text-center mb-4">Crear Nueva Actividad</h2>

<div class="form-box card-zoom4">
    <form asp-action="CreateExtracurricular" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DayOfWeek" class="form-label fw-bold"></label>
            <select asp-for="DayOfWeek" class="form-select">
                <option value="">Seleccione un día</option>
                <option value="1">Lunes</option>
                <option value="2">Martes</option>
                <option value="3">Miércoles</option>
                <option value="4">Jueves</option>
                <option value="5">Viernes</option>
                <option value="6">Sábado</option>
                <option value="0">Domingo</option>
            </select>
            <span asp-validation-for="DayOfWeek" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="UserID" class="form-label fw-bold"></label>
            <select asp-for="UserID" class="form-select" asp-items="@(new SelectList(Model.Teachers, "UserID", "UserName"))">
                <option value="">Sin asignar</option>
            </select>
            <span asp-validation-for="UserID" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2 mt-4">
            <button type="submit" class="btn btn-primary-custom">Crear Actividad</button>
            <a asp-action="ListExtracurriculars" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>