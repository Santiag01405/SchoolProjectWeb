@model SchoolProjectWeb.Models.ClassroomViewModel

@{
    ViewData["Title"] = "Editar Salón";
}

<h1>Editar Salón</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditClassroom" method="post">
            <input type="hidden" asp-for="ClassroomID" />
            <input type="hidden" asp-for="SchoolID" />

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="ListClassrooms">Volver a la lista</a>
</div>