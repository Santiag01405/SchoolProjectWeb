@model SchoolProjectWeb.Models.ExtracurricularEditViewModel

@{
	ViewData["Title"] = "Editar Actividad";
}

<h2 class="main-title text-center mb-4">Editar <span class="brand-name">Actividad</span> Extracurricular</h2>
<hr />

@if (TempData["Success"] != null)
{
	<div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="row justify-content-center">
	<div class="col-md-8">
		<div class="form-box">
			<form asp-action="EditExtracurricular" method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>

				<input type="hidden" asp-for="ActivityID" />
				<input type="hidden" asp-for="SchoolID" />

				<div class="mb-3">
					<label asp-for="Name" class="form-label fw-bold">Nombre:</label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="Description" class="form-label fw-bold">Descripción:</label>
					<textarea asp-for="Description" class="form-control" rows="3"></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="DayOfWeek" class="form-label fw-bold">Día de la semana:</label>
					<select asp-for="DayOfWeek" class="form-select">
						<option value="">-- Seleccione un día --</option>
						<option value="1">Lunes</option>
						<option value="2">Martes</option>
						<option value="3">Miércoles</option>
						<option value="4">Jueves</option>
						<option value="5">Viernes</option>
					</select>
					<span asp-validation-for="DayOfWeek" class="text-danger"></span>
				</div>

				<div class="mb-3">
					<label asp-for="UserID" class="form-label fw-bold">Profesor asignado:</label>
					<select asp-for="UserID" class="form-select" asp-items="@(new SelectList(Model.Teachers, "UserID", "UserName"))">
						<option value="">-- No asignar --</option>
					</select>
					<span asp-validation-for="UserID" class="text-danger"></span>
				</div>

				<div class="text-center mt-4">
					<button type="submit" class="btn btn-primary-custom">Guardar Cambios</button>
					<a asp-action="ListExtracurriculars" class="btn btn-secondary-custom ms-2">Volver a la lista</a>
				</div>
			</form>
		</div>
	</div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>