@model List<SchoolProjectWeb.Models.ExtracurricularViewModel>

@{
    ViewData["Title"] = "Actividades Extracurriculares";
}

<h2 class="main-title text-center mb-4">Gestión de Actividades Extracurriculares</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<div class="mb-3">
    <a asp-action="CreateExtracurricular" class="btn btn-primary-custom">
        <i class="fa-solid fa-plus me-1"></i> Crear Nueva Actividad
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">No hay actividades extracurriculares registradas.</div>
}
else
{
    <div class="table-responsive card-zoom5">
        <table class="table table-striped table-bordered align-middle">
            <thead style="background-color: #0C4251; color: white;">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th style="width: 50%;">Descripción</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model)
                {
                    <tr>
                        <td>@activity.ActivityID</td>
                        <td>@activity.Name</td>
                        <td>@activity.Description</td>
                        <td>
                            <div class="d-flex flex-wrap gap-1 justify-content-start">
                                <a class="btn btn-sm btn-yellow" asp-action="EditExtracurricular" asp-route-id="@activity.ActivityID">Editar</a>
                                <form asp-action="DeleteExtracurricular" asp-route-id="@activity.ActivityID" method="post" class="d-inline"
                                      onsubmit="return confirm('¿Estás seguro de que deseas eliminar esta actividad?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}