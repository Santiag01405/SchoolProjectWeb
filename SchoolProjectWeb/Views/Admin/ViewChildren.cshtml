@model List<SchoolProjectWeb.Models.User>
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Ver hijos por padre";
}

<h1 class="main-title">Ver hijos por <span class="brand-name">padre</span></h1>

<div class="card card-custom card-zoom2">
    <div class="card-body">
        <h5 class="card-title">Selecciona un padre</h5>
        <form asp-action="ViewChildrenOfParent" method="get">
            <div class="form-group">
                <label for="userId">Padre:</label>
                <select name="userId" id="userId" class="form-control">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var parent in Model)
                        {
                            <option value="@parent.UserID">@parent.UserName</option>
                        }
                    }
                    else
                    {
                        <option value="">No se encontraron padres</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary-custom mt-3">Ver hijos</button>
        </form>
    </div>
</div>

<hr />

<div>
    <a asp-action="CreateUserRelationship" class="btn btn-secondary-custom">Ir a creación de relaciones</a>
</div>