@model List<SchoolProjectWeb.Models.StudentViewModel>

@{
    ViewData["Title"] = $"Hijos de {ViewBag.ParentName}";
}

<h1 class="main-title">Hijos de <span class="brand-name">@ViewBag.ParentName</span></h1>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th>Nombre del Hijo</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var child in Model)
            {
                <tr>
                    <td>@child.StudentName</td>
                    <td>@child.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No se encontraron hijos para este padre.</div>
}

<a asp-action="ViewChildren" class="btn btn-secondary-custom mt-3">Volver a la vista de padres</a>