@model List<SchoolProjectWeb.Models.User>

@{
    ViewData["Title"] = $"Estudiantes en {ViewBag.ClassroomName}";
}

<h1 class="main-title">Estudiantes en el salón: <span class="brand-name">@ViewBag.ClassroomName</span></h1>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped">
        <thead class="bg-secondary text-white">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo Electrónico</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.UserID</td>
                    <td>@student.UserName</td>
                    <td>@student.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">No se encontraron estudiantes en este salón.</div>
}

<a asp-action="ListClassrooms" class="btn btn-secondary-custom mt-3">Volver a la lista de salones</a>