<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolProjectWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolProjectWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark" style="background-color: #0C4251; box-shadow: 0 4px 6px -1px rgba(0,0,0,0.3);">
            <div class="container-fluid">

                <a class="navbar-brand" asp-area="" asp-controller="Admin" asp-action="Index">
                    <img src="~/lib/Resources/Images/artboard.png" alt="SchoolProjectWeb Logo" style="height: 2rem; width: auto;">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenuOffcanvas" aria-controls="mobileMenuOffcanvas">
                    <span class="navbar-toggler-icon"></span>
                </button>

              
            </div>
        </nav>
    </header>

    <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenuOffcanvas" aria-labelledby="mobileMenuOffcanvasLabel">

        <div class="offcanvas-header">
            <div>
                <h5 class="offcanvas-title" id="mobileMenuOffcanvasLabel">Menú</h5>
                <span class="offcanvas-subtitle">
                    <i class="fa-solid fa-user-circle me-1"></i>
                    @Context.Session.GetString("email")
                </span>
            </div>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav">
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="Index">Inicio</a></li>
                <hr class="mobile-nav-divider" />
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ListUsers">Ver Usuarios</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="CreateUser">Crear Usuario</a></li>
                <hr class="mobile-nav-divider" />
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ListCourses">Ver Cursos</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="CreateCourse">Crear Curso</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="AssignClassroom">Asignar Curso a Salón</a></li>
                <hr class="mobile-nav-divider" />
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ViewChildren">Ver Relaciones</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="CreateUserRelationship">Crear Relación</a></li>
                <hr class="mobile-nav-divider" />
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ListClassrooms">Ver Salones</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="AssignStudentToClassroom">Asignar Alumno</a></li>
                <hr class="mobile-nav-divider" />
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ListStudents">Inscripciones</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="SendNotification">Notificaciones</a></li>
                <hr class="mobile-nav-divider" />

                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="ListEvaluations">Ver Evaluaciones</a></li>
                <li><a class="nav-link mobile-nav-link" asp-controller="Admin" asp-action="CreateEvaluation">Crear Evaluación</a></li>

                
                <hr class="mobile-nav-divider" />

              <!--  <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" style="color: #6bbdda;" asp-controller="Login" asp-action="Logout">Cerrar sesión <i class="fa-solid fa-right-from-bracket"></i></a>
                    </li>
                </ul>-->
            </ul>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SchoolApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.querySelectorAll('.nav-item.dropdown').forEach(dropdown => {
          const toggle = dropdown.querySelector('.dropdown-toggle');
          const icon = toggle.querySelector('.caret-icon');

          dropdown.addEventListener('shown.bs.dropdown', () => {
            icon.style.transform = 'rotate(180deg)';
            icon.style.transition = 'transform 0.3s ease';
          });

          dropdown.addEventListener('hidden.bs.dropdown', () => {
            icon.style.transform = 'rotate(0deg)';
            icon.style.transition = 'transform 0.3s ease';
          });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)



</body>
</html>